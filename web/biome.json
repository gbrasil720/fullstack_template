{
  "$schema": "https://biomejs.dev/schemas/1.6.1/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "suspicious": {
        "all": false
      },
      "a11y": {
        "noSvgWithoutTitle": "off"
      },
      "correctness": {
        "all": false
      },
      "style": {
        "all": false
      }
    },
    "ignore": [
      "./src/components/ui"
    ]
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "semicolons": "asNeeded",
      "indentStyle": "tab",
      "indentWidth": 2,
      "trailingCommas": "es5"
    }
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": true,
    "indentStyle": "tab",
    "indentWidth": 2,
    "lineWidth": 80,
    "lineEnding": "lf",
    "ignore": [
      "./src/components/ui"
    ]
  }
}